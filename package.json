{
  "name": "surfsafe",
  "version": "1.0.0",
  "description": "AI-powered real-time website scam detection Chrome extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "generate-icons": "node scripts/generate-png-icons.js"
  },
  "keywords": [
    "chrome-extension",
    "security",
    "scam-detection",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.1.31",
    "@types/node": "^24.10.1",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
